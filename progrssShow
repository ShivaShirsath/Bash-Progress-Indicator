#!/bin/bash

o=( \
	'Ooooo' \
	'oOooo' \
	'ooOoo' \
	'oooOo' \
	'ooooO' \
)
s=( \
	'/' \
	'-' \
	'\' \
	'|' \
)
e=( \
	'.' \
	'•' \
	'●' \
	'⬤' \
)
b=( \
	'▛' \
	'▜' \
	'▟' \
	'▙' \
)
t=( \
	'▁' \
	'▂' \
	'▃' \
	'▄' \
	'▅' \
	'▆' \
	'▇' \
	'█' \
)
c=( \
	'◐' \
	'◓' \
	'◑' \
	'◒' \
)
bk=( \
	'◱' \
	'◰' \
	'◳' \
	'◲' \
)
tri=( \
	'◢' \
	'◣' \
	'◤' \
	'◥' \
)
dot=( \
	'⋰' \
	'⋯' \
	'⋱' \
	'⋮' \
)
sp=( \
	'⊕' \
	'⊗' \
)
there=( \
	'∵' \
	'⁖' \
	'∴' \
	'჻' \
)
dola=( \
	':)' \
	';)' \
)

while [ 1 ]; do
  for i in ${b[@]}; do
    echo -ne "\r${i}"
    sleep 0.5
  done
done
echo ""

